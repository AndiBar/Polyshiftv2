        <activity android:name=".Menu.NewOpponentActivity" />
        <activity android:name=".Menu.OpponentsAttendingActivity" />
        <activity android:name=".Menu.MyGamesActivity" />
        <activity android:name=".Menu.GamesAttendingActivity" />

        <receiver
            android:name=".Menu.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>

        <service android:name=".Menu.GcmIntentService" />

        <activity
            android:name=".Menu.ScoresActivity"
            android:label="@string/title_activity_scores" >
        </activity>
    </application>

</manifest>
